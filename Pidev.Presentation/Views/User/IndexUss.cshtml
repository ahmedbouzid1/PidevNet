    <section class="content">










        <div class="col-sm-6">
            <h1>Nos Directeurs RH</h1>
        </div>
        <div class="card card-solid">
            <div class="card-body pb-0">
                <div class="row d-flex align-items-stretch">
                    @foreach (var p in ViewBag.result)
                    {
                        string a = "DirecteurRH";
                        if (p.role == a)
                        {
                            <div class="col-12 col-sm-6 col-md-4 d-flex align-items-stretch">
                                <div class="card bg-light">
                                    <div class="card-header text-muted border-bottom-0">
                                        @p.role
                                    </div>
                                    <a href="~/Views/User/IndexUss.cshtml">~/Views/User/IndexUss.cshtml</a>
                                    <div class="card-body pt-0">
                                        <div class="row">
                                            <div class="col-7">
                                                <h2 class="lead"><b>@p.prenom</b> <b>@p.nom</b></h2>

                                                <ul class="ml-4 mb-0 fa-ul text-muted">
                                                    <li class="small"><span class="fa-li"><i class="fas fa-lg fa-building"></i></span> Address: @p.addresse</li>
                                                    <li class="small"><span class="fa-li"><i class="fas fa-lg fa-phone"></i></span> Email: @p.email</li>
                                                </ul>
                                            </div>
                                            <div class="col-5 text-center">
                                                @{ string path = "~/content/Uploads/" + p.image;}
                                                <img src="@Url.Content(path)" class="img-circle img-fluid" width="110" height="100" />
                                            </div>
                                        </div>
                                    </div>
                                    <div class="card-footer">
                                        <div class="text-right">
                                            <a href="../Home/Chat" class="btn btn-sm bg-teal">
                                                <i class="fas fa-comments"></i>
                                            </a>

                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                </div>
            </div>
            <!-- /.card-body -->
            <div class="card-footer">
                <nav aria-label="Contacts Page Navigation">
                    <ul class="pagination justify-content-center m-0">
                        <li class="page-item active"><a class="page-link" href="#">1</a></li>
                        <li class="page-item"><a class="page-link" href="#">2</a></li>
                        <li class="page-item"><a class="page-link" href="#">3</a></li>
                        
